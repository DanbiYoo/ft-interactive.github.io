mixin card(link, heading, content, logo)
  div(data-o-grid-colspan='12 M4')
    a.o-techdocs-card(href=link)
      .o-techdocs-card__context
        if logo
          img.o-techdocs-card__icon(src='https://image.webservices.ft.com/v1/images/raw/' + encodeURIComponent(logo) + '?source=interactive-dev-guide&width=30&height=30&fit=contain')
        .o-techdocs-card__heading
          .o-techdocs-card__title= heading
          //- .o-techdocs-card__subtitle 
      .o-techdocs-card__content= content

//- hack: I can't work out how to widen the gutter between o-grid elements
mixin cardSpacer
  div(data-o-grid-colspan='hide M1')


